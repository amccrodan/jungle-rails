<tr>
  <td>
    <dl class="dl-horizontal">
    <dt><%= review.user.first_name %> <%= review.user.last_name %></dt>
    <dd><%= review.description %></dd>
    </dl>
    <td><%= review.rating %> / 5
    <% if current_user.id == review.user.id %>
    <%= link_to fa_icon('trash'), [@product, review], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right' %></td>
    <% end %>
  </td>
</tr>